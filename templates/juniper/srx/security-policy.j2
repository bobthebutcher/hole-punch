security {
    policies {
{% if zone.source %} 
        from-zone {{ zone.source }} to-zone {{ zone.destination }} {
{% else %}
        global {
{% endif %}
{% for rule in rules %}
            policy {{ rule.name }} {
                match {
                    source-address {{ rule.source.name }};
                    destination-address {{ rule.destination.name }}; 
                    application {{ rule.service }};
                }
                then {
                    {{ rule.action }};
                }
            }
{% endfor %}
        }
    }
}
